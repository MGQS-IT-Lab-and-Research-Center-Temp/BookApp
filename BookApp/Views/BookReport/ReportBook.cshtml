@model BookApp.Models.BookReport.CreateBookReportViewModel
@{
    ViewData["Title"] = "Create New Book Report";
    var bookId = ViewContext.RouteData.Values["id"];
}

@section Styles {
    @{
        await Html.RenderPartialAsync("_Select2CssPartial");
    }
}

<div class="body">

    <div class="row">
        <div class="col-md-6">
            <form asp-action="ReportBook" asp-controller="BookReport">
                <input type="hidden" class="form-control" name="BookId" value="@bookId" />

                <div class="col-md-12 mb-3">
                    <select type="checkbox" class="form-control" multiple="multiple"
                            name="FlagIds" required="required"
                            data-placeholder="Select Book Flags"
                            asp-items="@ViewBag.FlagLists">
                    </select>
                </div>

                <div class="col-md-12 mb-3">
                    <label asp-for="AdditionalComment" class="control-label"></label>
                    <textarea asp-for="AdditionalComment" class="form-control"></textarea>
                    <span asp-validation-for="AdditionalComment" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Report Book</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_Select2JsPartial");
    }
}
