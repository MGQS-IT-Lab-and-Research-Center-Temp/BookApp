@model BookApp.Models.Book.CreateBookViewModel

@{
    ViewData["Title"] = "Create A Book";
}

@section Styles {
    @{
        await Html.RenderPartialAsync("_Select2CssPartial");
    }
}

<div class="body">

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="col-md-12 mb-2">
                    <label class="form-label">Categories:</label>
                    <select asp-for="CategoryIds" class="form-control" asp-items="@ViewBag.Categories" data-placeholder="Select Categories" multiple>
                    </select>
                    <span asp-validation-for="CategoryIds" class="text-danger"></span>
                </div>

                <div class="col-md-12 mb-2">
                    <label class="form-label">Question:</label>
                    <textarea class="form-control" placeholder="Enter your question" asp-for="BookText"></textarea>
                    <span asp-validation-for="BookText" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">Create Question</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_Select2JsPartial");
    }
}
